{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "JSON Schema for Buildings aggregate",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "Branches": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/branch"
      }
    }
  },
  "required": [ "$schema", "Branches" ],
  "additionalProperties": false,
  "definitions": {
    "branch": {
      "type": "object",
      "properties": {
        "Id": {
          "type": "string"
        },
        "Name": {
          "type": "string"
        },
        "SlotType": {
          "type": "integer"
        },
        "RegionType": {
          "type": "integer"
        },
        "ReligionId": {
          "type": "string",
          "minLength": 1
        },
        "ResourceId": {
          "type": "string",
          "minLength": 1
        },
        "AllowParallel": {
          "type": "boolean"
        },
        "Interesting": {
          "type": "boolean"
        },
        "Levels": {
          "type": "array",
          "minItems": 3,
          "items": {
            "$ref": "#/definitions/level"
          }
        }
      },
      "required": [ "Id", "Name", "SlotType", "Levels" ],
      "additionalProperties": false
    },
    "level": {
      "type": "object",
      "properties": {
        "Id": {
          "type": "string"
        },
        "Name": {
          "type": "string"
        },
        "ParentId": {
          "type": "string"
        },
        "Effect": {
          "$ref": "..\\Data\\Effects-schema.json#"
        },
        "Maintenance": {
          "type": "integer"
        },
        "LocalFood": {
          "type": "integer"
        },
        "LocalFoodFromFertility": {
          "type": "integer"
        },
        "LocalSanitation": {
          "type": "integer"
        },
        "CapitalTier": {
          "type": "integer"
        },
        "Incomes": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/income"
          }
        }
      },
      "required": [ "Id", "Name" ],
      "additionalProperties": false
    },
    "income": {
      "type": "object",
      "properties": {
        "Value": {
          "type": "integer"
        },
        "Category": {
          "type": "integer"
        },
        "IsFertilityDependent": {
          "type": "boolean"
        }
      },
      "required": [ "Value", "Category" ],
      "additionalProperties": false
    }
  }
}