{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "JSON Schema for Factions aggregate",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "Factions": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/faction"
      },
      "minItems": 1
    }
  },
  "required": [ "$schema", "Factions" ],
  "additionalProperties": false,
  "definitions": {
    "faction": {
      "type": "object",
      "properties": {
        "Id": {
          "type": "string",
          "minLength": 1
        },
        "Name": {
          "type": "string",
          "minLength": 1
        },
        "Effect": {
          "$ref": "..\\Effects\\Effects-schema.json#"
        },
        "UsedBuildingBranchIds": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "StartingBuildingLevelIds": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "TechnologyGroups": {
          "type": "array",
          "minItems": 12,
          "maxItems": 12,
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/technology_group"
          }
        }
      },
      "required": [ "Id", "Name", "UsedBuildingBranchIds", "StartingBuildingLevelIds", "TechnologyGroups" ],
      "additionalProperties": false
    },
    "technology_group": {
      "type": "object",
      "properties": {
        "Order": {
          "type": "integer"
        },
        "Technologies": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/technology"
          }
        },
        "CompletionEffect": {
          "$ref": "..\\Effects\\Effects-schema.json#"
        }
      },
      "required": [ "Order", "Technologies" ],
      "additionalProperties": false
    },
    "technology": {
      "type": "object",
      "properties": {
        "Id": {
          "type": "string",
          "minLength": 1
        },
        "Name": {
          "type": "string",
          "minLength": 1
        },
        "RequiredIds": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "NegatedIds": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "Effect": {
          "$ref": "..\\Effects\\Effects-schema.json#"
        },
        "UnlockedBuildingLevelIds": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        }
      },
      "required": [ "Id", "Name" ],
      "additionalProperties": false
    }
  }
}