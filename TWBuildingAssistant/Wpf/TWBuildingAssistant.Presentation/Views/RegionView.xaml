<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TWBuildingAssistant.Presentation.Views.RegionView">
    <StackPanel Orientation="Vertical">
        <Border Padding="4" Margin="3" BorderThickness="1" BorderBrush="DarkGray">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding Name}" HorizontalAlignment="Center"/>
                <ItemsControl ItemsSource="{Binding Slots}"></ItemsControl>
            </StackPanel>
        </Border>
        <Border Padding="4" Margin="3" BorderThickness="1" BorderBrush="DarkGray">
            <TextBlock Width="276" Text="{Binding Performance}"/>
        </Border>
    </StackPanel>
</UserControl>