{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "JSON Schema for Factions aggregate",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "Factions": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/faction"
      },
      "minItems": 1
    }
  },
  "required": [ "$schema", "Factions" ],
  "additionalProperties": false,
  "definitions": {
    "faction": {
      "type": "object",
      "properties": {
        "Id": {
          "type": "string"
        },
        "Name": {
          "type": "string"
        },
        "Effect": {
          "$ref": "..\\Data\\Effects-schema.json#"
        },
        "UsedBuildingBranchIds": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },
        "TechnologyLevels": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/technology_level"
          }
        }
      },
      "required": [ "Id", "Name", "UsedBuildingBranchIds", "TechnologyLevels" ],
      "additionalProperties": false
    },
    "technology_level": {
      "type": "object",
      "properties": {
        "Order": {
          "type": "integer"
        },
        "UniversalPath": {
          "$ref": "#/definitions/technology_path"
        },
        "AntilegacyPath": {
          "$ref": "#/definitions/technology_path"
        }
      },
      "required": [ "Order", "UniversalPath" ],
      "additionalProperties": false
    },
    "technology_path": {
      "type": "object",
      "properties": {
        "Effect": {
          "$ref": "..\\Data\\Effects-schema.json#"
        },
        "UnlockedBuildingLevelIds": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "LockedBuildingLevelIds": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      },
      "additionalProperties": false
    }
  }
}